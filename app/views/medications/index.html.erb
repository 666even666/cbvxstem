<p id="notice"><%= notice %></p>

<h1>Medications</h1>

<table>
  <thead>
    <tr>
      <th>Provider</th>
      <th>Directions</th>
      <th>Days</th>
      <th>Description</th>
      <th>User holder</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medications.each do |medication| %>
      <tr>
        <td><%= medication.provider %></td>
        <td><%= medication.directions %></td>
        <td><%= medication.days %></td>
        <td><%= medication.description %></td>
        <td><%= medication.user_holder %></td>
        <td><%= link_to 'Show', medication %></td>
        <td><%= link_to 'Edit', edit_medication_path(medication) %></td>
        <td><%= link_to 'Destroy', medication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

