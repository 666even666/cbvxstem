<p id="notice"><%= notice %></p>

<h1>Medications</h1>

<table>
  <thead>
    <tr>
      <th>Provider</th>
      <th>Directions</th>
      <th>Days</th>
      <th>Description</th>
      <th colspan="2">Patient Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medications.each do |medication| %>
      <tr>
        <td><%= medication.provider %></td>
        <td><%= medication.directions %></td>
        <td><%= medication.days %></td>
        <td><%= medication.description %></td>
        <td><%= medication.user_holder.first_name %></td>
        <td><%= medication.user_holder.last_name %></td>
        <td><%= link_to 'Show Medication', [@user_holder, medication] %></td>
        <td><%= link_to 'Edit', edit_user_holder_medication_path(@user_holder, medication) %></td>
        <td><%= link_to 'Destroy', [@user_holder, medication], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Medication', new_user_holder_medication_path(@user_holder) %>
