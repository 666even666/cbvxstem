<div class = "search_table">
<p id="notice"><%= notice %></p>
<div>
<h1 style="text-align: center">My Schedule</h1>
<br>
</div>


<br>

<%= month_calendar events: @meetings do |date, meetings| %>
  <%= date %>

  <% meetings.each do |meeting| %>
    <div>
      <%= if meeting.patient_id.nil? 
        then link_to "Available", user_holder_meeting_path(meeting.user_holder_id, meeting.id) 
        else link_to "#{UserHolder.find(meeting.patient_id).first_name + ' ' + UserHolder.find(meeting.patient_id).last_name }", user_holder_meeting_path(meeting.user_holder_id, meeting.id) end %>

    </div>
  <% end %>
<% end %>

<%= link_to 'New Meeting', new_user_holder_meeting_path(current_user) %>
