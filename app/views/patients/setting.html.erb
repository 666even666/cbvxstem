<div class='container'>
  <h2>Notifications Setting</h2>



  <%= form_for(@current_setting, url: patient_update_setting_path(@current_user)) do |f| %>
    <p><b></b> <b>Email</b> <b>WhatsApp</b>
        
    <p><b>Document added:</b> 
    <%= f.select :create_doc_email_notification, ["Always notify me", "Only notifiy me when specified", "Never notify me"], :required => true %>

    <%= f.select :create_doc_whatsapp_notification, ["Always notify me", "Only notifiy me when specified", "Never notify me"], :required => true %>
    </p>

    <p><b>Document changed:</b> 
    <%= f.select :change_doc_email_notification, ["Always notify me", "Only notifiy me when specified", "Never notify me"], :required => true %>

    <%= f.select :change_doc_whatsapp_notification, ["Always notify me", "Only notifiy me when specified", "Never notify me"], :required => true %>
    </p>

    <p><b>Document change required:</b> 
    <%= f.select :require_doc_email_notification, ["Always notify me", "Only notifiy me when specified", "Never notify me"], :required => true %>

    <%= f.select :require_doc_whatsapp_notification, ["Always notify me", "Only notifiy me when specified", "Never notify me"], :required => true %>
    </p>

    <p><b>Treatment added:</b> 
    <%= f.select :create_tre_email_notification, ["Always notify me", "Only notifiy me when specified", "Never notify me"], :required => true %>

    <%= f.select :create_tre_whatsapp_notification, ["Always notify me", "Only notifiy me when specified", "Never notify me"], :required => true %>
    </p>

    <p><b>Treatment changed:</b> 
    <%= f.select :change_tre_email_notification, ["Always notify me", "Only notifiy me when specified", "Never notify me"], :required => true %>

    <%= f.select :change_tre_whatsapp_notification, ["Always notify me", "Only notifiy me when specified", "Never notify me"], :required => true %>
    </p>

    <p><b>Medication added:</b> 
    <%= f.select :create_med_email_notification, ["Always notify me", "Only notifiy me when specified", "Never notify me"], :required => true %>

    <%= f.select :create_med_whatsapp_notification, ["Always notify me", "Only notifiy me when specified", "Never notify me"], :required => true %>
    </p>

    <p><b>Medication changed:</b> 
    <%= f.select :change_med_email_notification, ["Always notify me", "Only notifiy me when specified", "Never notify me"], :required => true %>

    <%= f.select :change_med_whatsapp_notification, ["Always notify me", "Only notifiy me when specified", "Never notify me"], :required => true %>
    </p>
         
    <%= f.submit 'Submit change', :class => 'col-md-1.5 btn btn-danger' %>

  <% end %>


</div>
