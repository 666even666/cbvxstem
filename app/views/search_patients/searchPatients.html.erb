<div class="container">
  <%= form_tag searchPatients_path, :method => 'post' do %>
    <div class="form-group row">
      <label for="search_first_name" class="col-form-label">Fisrt Name: </label>
      <input type="text" name="search_first_name" autocomplete="off" class="search_box form-control col-md-1"/>
      <label for="search_last_name" class="col-form-label"> Last Name: </label>
      <input type="text" name="search_last_name" autocomplete="off" class="search_box form-control col-md-1"/>
      <label for="search_id" class="col-form-label"> Patient ID: </label>
      <input type="text" name="search_id" autocomplete="off" class="search_box form-control col-md-1"/>
      <input type="submit" value="search patients" class="btn btn-success"/>
    </div>

  <% end %>
</div>
<div class = "search_table">
<table class = "table table-striped col-md-12">
  <thead>
    <tr>
      <th> First Name </th>
      <th> Last Name </th>
      <th> email </th>
      <th> Whatsapp </th>
      <th class=<%=@parent_id_class%>> <%= link_to "Parent Id", searchPatients_path(:sort => "user_holder_id"), id: "parent_id_sort" %></th>
      <th> Link to Profile</th>
      <th> Link to Documents</th>
      <th> Link to Medications</th>
      <th> Link to Treatments</th>
    </tr>
  </thead>
  <tbody>
      <%@patients.each do |p| %>
        <tr>
          <td><%= p.first_name %></td>
          <td><%= p.last_name %></td>
          <td><%= p.email %></td>
          <td><%= if p.whatsapp then link_to '<i class="fab fa-whatsapp"></i>'.html_safe, "https://wa.me/1"+p.whatsapp, target: :_blank else '<i class="fab fa-whatsapp"></i>'.html_safe end%></td>
          <td><%= hashForUser(p)[0..5] %></td>
          <td> <%= link_to profile_name_format(p.first_name, p.last_name), patient_path(p), id: (p.user_holder_id.to_s + '_profile'), class: 'btn btn-primary col-md-12', style: "color: white"%></td>
          <td> <%= link_to "Documents", documentations_index_path(p), id: (p.user_holder_id.to_s + '_document'), class: 'btn btn-primary col-md-12', style: "color: white"%></td>
          <td> <%= link_to "Medications", user_holder_medications_path(p), id: (p.user_holder_id.to_s + '_medication'), class: 'btn btn-primary col-md-12', style: "color: white"%></td>
          <td> <%= link_to "Treatments", user_holder_treatments_path(p), id: (p.user_holder_id.to_s + '_treamtent'), class: 'btn btn-primary col-md-12', style: "color: white"%></td>
        </tr>
      <%end%>
    </tbody>
</table>
</div>
